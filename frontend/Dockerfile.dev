FROM node:20-alpine

WORKDIR /app

# Install Angular CLI globally
RUN npm install -g @angular/cli@18

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source
COPY . .

# Expose port
EXPOSE 4200

# Start dev server
CMD ["ng", "serve", "--host", "0.0.0.0", "--poll", "2000"]
